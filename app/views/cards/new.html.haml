= render "front/header"
.mypage
  .mypage__container
    .mypage__content
      .mypage__card__info
        .mypage__card__info__header
          クレジットカード情報入力
        .mypage__card__resistration
          = form_tag(pay_cards_path, method: :post, id: 'charge-form',  name: "inputForm") do
            .field
              %label カード番号
              %span.form-require
              = text_field_tag "number", "", class: "number input-default", placeholder: "半角数字のみ" ,maxlength: "16", type: "text", id: "card_number"
            .field
              %label 有効期限
              %span.form-require
              %br
              %select#exp_month.input-half{name: "exp_month", type: "text"}
                %option{value: ""} --
                %option{value: "1"}01
                %option{value: "2"}02
                %option{value: "3"}03
                %option{value: "4"}04
                %option{value: "5"}05
                %option{value: "6"}06
                %option{value: "7"}07
                %option{value: "8"}08
                %option{value: "9"}09
                %option{value: "10"}10
                %option{value: "11"}11
                %option{value: "12"}12
              %span 月/
              %select#exp_year.input-half{name: "exp_year", type: "text"}
                %option{value: ""} --
                %option{value: "2019"}19
                %option{value: "2020"}20
                %option{value: "2021"}21
                %option{value: "2022"}22
                %option{value: "2023"}23
                %option{value: "2024"}24
                %option{value: "2025"}25
                %option{value: "2026"}26
                %option{value: "2027"}27
                %option{value: "2028"}28
                %option{value: "2029"}29
              %span 年
            .field
              %label セキュリティコード
              %span.form-require
              = text_field_tag "cvc", "", class: "cvc input-default", placeholder: "カード背面3~4桁の番号", maxlength: "4", id: "cvc"
            .field#card_token
            = submit_tag "登録する", id: "token_submit",class: "resistration-btn"
    .mypage__side
      %nav.mypage__nav
        %ul.mypage__nav__list
          %li.mypage__nav__list__item
            =link_to("マイページ", "/users/#{current_user.id}")
          %li.mypage__nav__list__item
            =link_to("お知らせ", "#")
          %li.mypage__nav__list__item
            =link_to("やることリスト", "#")
          %li.mypage__nav__list__item
            =link_to("いいね！一覧", "#")
          %li.mypage__nav__list__item
            =link_to("出品する", "#")
          %li.mypage__nav__list__item
            =link_to("下書き一覧", "#")
          %li.mypage__nav__list__item
            =link_to("出品した商品-出品中", "#")
          %li.mypage__nav__list__item
            =link_to("出品した商品-取引中", "#")
          %li.mypage__nav__list__item
            =link_to("出品した商品-売却済み", "#")
          %li.mypage__nav__list__item
            =link_to("購入した商品-取引中", "#")
          %li.mypage__nav__list__item
            =link_to("出品した商品-過去の取引", "#")
          %li.mypage__nav__list__item
            =link_to("ニュース一覧", "#")
          %li.mypage__nav__list__item
            =link_to("評価一覧", "#")
          %li.mypage__nav__list__item
            =link_to("ガイド", "#")
          %li.mypage__nav__list__item
            =link_to("お問い合わせ", "#")
        %h3.mypage__nav__head
          設定
        %ul.mypage__nav__list
          %li.mypage__nav__list__item
            =link_to("プロフィール", "#")
          %li.mypage__nav__list__item
            =link_to("発送元・お届け先住所変更", "#")
          %li.mypage__nav__list__item.active
            =link_to("支払い情報",  cards_path)
          %li.mypage__nav__list__item
            =link_to("メール・パスワード", "#")
          %li.mypage__nav__list__item
            =link_to("本人情報", "#")
          %li.mypage__nav__list__item
            = link_to "ログアウト", logout_users_path
= render "front/footer"